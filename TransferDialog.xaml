<Window x:Class="WpfApp1.TransferDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        Title="Перевод" Height="170" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите сумму перевода:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtTransferAmount" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ОК" Width="80" Height="30" IsDefault="True" Click="OkButton_Click"/>
                <Button Content="Отмена" Width="80" Height="30" IsCancel="True" Click="CancelButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>