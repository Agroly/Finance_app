<Window x:Class="WpfApp1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Регистрация" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Регистрация" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="txtUsername" Text="Логин" Margin="0,0,0,10" GotFocus="RemoveText"/>
            <Grid>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />
                <TextBox x:Name="txtPasswordPlaceholder" Text="Пароль" Margin="0,0,0,10" GotFocus="RemoveTextPassword" />
            </Grid>
            <TextBox x:Name="txtLastName" Text="Фамилия" Margin="0,0,0,10" GotFocus="RemoveText"/>
            <TextBox x:Name="txtFirstName" Text="Имя" Margin="0,0,0,10" GotFocus="RemoveText"/>
            <TextBox x:Name="txtMiddleName" Text="Отчество" Margin="0,0,0,10" GotFocus="RemoveText"/>
            <TextBox x:Name="txtAge" Text="Возраст" Margin="0,0,0,10" GotFocus="RemoveText"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
