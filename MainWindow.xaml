<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кошелёк Контроль" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        
         
          <TextBlock Grid.Row="0" Grid.Column="1" Text="Добро пожаловать!" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="52" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <!-- Кнопка Вход -->
            <Button Content="Вход"  Width="200" Height="50" Click="LoginButton_Click"/>

         
            <Button Content="Регистрация"  Width="200" Height="50" Click="RegisterButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
