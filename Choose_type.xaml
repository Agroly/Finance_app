<Window x:Class="WpfApp1.Choose_type"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        Title="Выберите тип счета" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Выберите тип счета" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="cmbAccountType" Margin="0,0,0,10">
                <ComboBoxItem Content="Дебетовая карта"/>
                <ComboBoxItem Content="Кредитная карта"/>
                <ComboBoxItem Content="Накопительный счет"/>
            </ComboBox>
            <Button Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
