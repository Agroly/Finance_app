<Window x:Class="WpfApp1.TopUpBalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource {x:Type Window}}"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Пополнение баланса" Height="170" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите сумму:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtAmount" Margin="0,0,0,10"/>
            <Button Content="ОК" Width="80" Height="30" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
